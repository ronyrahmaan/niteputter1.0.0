# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Expo Configuration
EXPO_PUBLIC_APP_NAME="NitePutter"
EXPO_PUBLIC_APP_VERSION="1.0.0"

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
EXPO_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Stripe Payment Configuration
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"

# SendGrid Email Configuration
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@niteputter.com"
SENDGRID_FROM_NAME="NitePutter"

# API Configuration
API_BASE_URL="https://api.niteputter.com"
API_TIMEOUT=10000

# Development Configuration
NODE_ENV="development"
DEBUG_MODE=true
LOG_LEVEL="debug"

# Analytics Configuration (Optional)
ANALYTICS_ENABLED=true
ANALYTICS_API_KEY="your-analytics-key"

# Push Notifications (Optional)
EXPO_PUSH_TOKEN_ENDPOINT="https://exp.host/--/api/v2/push/send"

# Feature Flags
FEATURE_BLUETOOTH_ENABLED=true
FEATURE_PAYMENTS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Security Configuration
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key"

# External Services
GOOGLE_MAPS_API_KEY="your-google-maps-key"
APPLE_PAY_MERCHANT_ID="merchant.com.niteputter.app"

# Build Configuration
EXPO_BUILD_ENVIRONMENT="development"
BUILD_NUMBER="1"